<MatDialog @bind-IsOpen="IsInfoOpen" CanBeClosed="false">
    <MatDialogTitle>
        <span style="top: 20px;">Информация</span>&nbsp;
        <div class="btn-group" style="padding-left: 450px; top: -40px;">
